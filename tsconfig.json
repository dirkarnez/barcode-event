{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esNext",
    "lib": ["es6", "es7", "dom"],
    "removeComments": true,
    "allowJs": false,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "src"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}